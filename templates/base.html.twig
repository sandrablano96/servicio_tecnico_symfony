
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="{{ asset('estilos/styles.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

    </head>

    <body>
        <header class="w-100  flex-wrap pt-2 pb-2 mb-4">
            <div class="info d-flex justify-content-between px-5 align-items-center">
                <h1 class="w-50">Servicio técnico</h1>
                <div class="d-flex w-50 align-items-center">
                    <nav class="w-75 text-end">
                        <a href="{{ path('listado_clientes') }}" class="text-uppercase">Clientes</a>
                        <a href="{{ path('listado_incidencias') }}" class="text-uppercase">Incidencias</a>
                    </nav> 
                    {% if app.user is not null %}
                        <div class="d-inline-flex flex-column align-items-end w-25">
                            <img src="{{ asset('imagenes/' ~ app.user.foto) }}" style="width: 50px; height: 50px; border-radius: 50%" class="text-center">{{ app.user.nombre }}
                            <a href="{{ path("app_logout")}}" class="w-100 text-end">Cerrar sesión </a>
                        </div>
                    {% endif %}
                </div>
            </div>

        </header>
        <main class="w-75 m-auto">
            {% block main %}
        </main>

        {% endblock %}
    </body>
</html>
