{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block main %}



    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center"
         id="template-bg-3">

        <div class="card mb-5 p-5  bg-gradient text-white col-md-4">
            <div class="card-header text-center">
                <h3>Iniciar sesión </h3>
            </div>
            <div class="card-body mt-3">
                <form action="{{ path('login') }}" method="post">
                    <input type="hidden" name="_target_path" value="{{ path("listado_clientes") }}"/> 
                    <div class="input-group form-group mt-3">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control text-center p-3" placeholder="Usuario"/>
                    </div>
                    <div class="input-group form-group mt-3">
                        <input <input type="password" id="password" name="_password" class="form-control text-center p-3"
                               placeholder="Contraseña">
                    </div>
                     <input type="checkbox" name="_remember_me"/>
                        Recordarme
                    <div class="text-center">
                        <input type="submit" value="Acceder"
                               class="btn btn-dark mt-3 w-100 p-2" name="login-btn">
                    </div>
                    <div class="text-center"><a href="{{ path("app_register") }}" class="text-white text-uppercase">Registrarme</a></div>
                </form>
                
            </div>
            <div class="card-footer p-3 d-flex justify-content-center">
                
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
        </div>

    </div>
{% endblock %}
