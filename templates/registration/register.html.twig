{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    <h1>Registro</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'w-50 m-auto'}}) }}
        {{ form_row(registrationForm.nombre, {'attr': {'class': 'form-control mb-2'}} ) }}
        {{ form_row(registrationForm.apellidos, {'attr': {'class': 'form-control mb-2'}} ) }}
        {{ form_row(registrationForm.telefono, {'attr': {'class': 'form-control mb-2'}} ) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-2'}} ) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Contrase√±a', 'attr': {'class': 'form-control mb-2'}
        }) }}
        {{ form_row(registrationForm.foto, {'attr': {'class': 'form-control mb-2'}} ) }}

        <button type="submit" class="btn boton w-100 mb-2">Registrarme</button>
    {{ form_end(registrationForm) }}
{% endblock %}
